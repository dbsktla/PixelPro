<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.PixelPro.mapper.MailMapper">

    <select id="updateInbox">
        update inbox set readdate = sysdate, status='read' where inum = #{inum}
    </select>

</mapper>